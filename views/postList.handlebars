<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"> Posts</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>Post Id</th>
                                <th>User Id</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each posts}}
                            <tr key={{id}}>
                                <td>{{id}}</td>
                                <td>{{userId}}</td>
                                <td>
                                    <a href="/post/{{id}}">{{title}} </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>